doctype
html
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no, minimal-ui")
        meta(name='apple-mobile-web-app-capable', content='yes')
        title My App
        link(rel="stylesheet", href="css/#{stylesheetFilename}.css")
        link(rel="stylesheet", href="css/#{stylesheetColorsFilename}.css")
        link(rel="stylesheet", href="css/my-app.css")
    body
        .statusbar-overlay
        .panel-overlay
        .panel.panel-left.panel-cover
            .view
                .pages
                    .page(data-page='panel-left')
                        .page-content
                            .content-block
                                .list-block
                                    ul
                                        li
                                            a(href="about.html").item-link.close-panel
                                                .item-content
                                                    .item-inner
                                                        .item-title
                                                            О программе

        .views
            .view.view-main
                .pages.navbar-fixed
                    .page(data-page="index")
                        .navbar
                            .navbar-inner
                                .center Заголовок
                                .right
                                    a(href="#").link.icon-only.open-panel
                                        i.icon.icon-bars
                        .toolbar.tabbar
                            .toolbar-inner
                                a(href="#tab-1").tab-link.active 
                                    i.icon.icon-road-accident
                                    Попали в ДТП?
                                a(href="#tab-2").tab-link 
                                    i.icon.icon-form-name
                                    Осаго
                                a(href="#tab-3").tab-link 
                                    i.icon.icon-form-tel
                                    Штрафы
                        .page-content
                            .tabs
                                .tab.active#tab-1
                                    .content-block
                                        .list-block
                                            ul
                                                li
                                                    a(href="about.html").item-link
                                                        .item-content
                                                            .item-inner
                                                                .item-title About
                                                li
                                                    a(href="services.html").item-link
                                                        .item-content
                                                            .item-inner
                                                                .item-title Services
                                                li
                                                    a(href="form.html").item-link
                                                        .item-content
                                                            .item-inner
                                                                .item-title Form
                                .tab#tab-2
                                    .content-block
                                        p tab 2
                                .tab#tab-3
                                    .content-block
                                        p tab 3
        script(type="text/javascript", src="js/#{scriptFilename}.js")
        script(type="text/javascript", src="js/my-app.js")
